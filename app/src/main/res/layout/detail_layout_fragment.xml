<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.detail.DetailLayout">
    <TextView
        android:id="@+id/txt_detail_detail"
        android:text="Deskripsi:\nMahessa Hotel adalah salah satu penginapan di daerah Jampang Kulon- Surade Sukabumi Regency Jawa barat yang sangat nyaman untuk istirahat baik untuk keluarga ataupun dengan teman. Dengan harga yang murah dan meriah dengan kesejukan suasana dan kebersihan tempat akan membuat istirahat anda sangat nyaman"
        android:textColor="@color/dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_detail_fasilitas"
        android:textColor="@color/dark"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>